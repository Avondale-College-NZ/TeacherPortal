@page "{id:min(1)}"
@model TeacherPortal.Pages.Teachers.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form method="post" class="mt-3">
    <input hidden asp-for="Teacher.ID" />

    <div class="form-group row">
        <label asp-for="Teacher.FirstName" class="col-sm-2 col-form-label">
        </label>
        <div class="col-sm-10">
            <input asp-for="Teacher.FirstName" class="form-control" placeholder="Name">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Teacher.Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Teacher.Email" class="form-control" placeholder="Email">
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Teacher.Department" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Teacher.Department" class="custom-select mr-sm-2"
                    asp-items="Html.GetEnumSelectList<Dept>()">
                <option value="">Please Select</option>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-page="/Teachers/Index" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>