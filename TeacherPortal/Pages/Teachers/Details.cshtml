@page "/teachers/view/{id:min(1)}"
@model TeacherPortal.Pages.Teachers.DetailsModel
@{
    ViewData["Title"] = "Details";
    var photoPath = "~/images/" + (Model.Teacher.PhotoPath ?? "User.jpg");
}

    <div class="row justify-content-center m-3">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header">
                    <h1>@Model.Teacher.FirstName</h1>
                </div>

                <div class="card-body text-center">
                    <img class="card-img-top" src="@photoPath" asp-append-version="true" />

                    <h4>Employee ID : @Model.Teacher.ID</h4>
                    <h4>Email : @Model.Teacher.Email</h4>
                    <h4>Department : @Model.Teacher.Department</h4>

                </div>
                <div class="card-footer text-center">
                    <a asp-page="index"
                       class="btn btn-primary">Back</a>
                    <a href="#" class="btn btn-primary">Edit</a>
                    <a href="#" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    </div>

